@model IEnumerable<Slides>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Responsive Hover Table</h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 my-3">
                            <a asp-action="Create" class="btn btn-success">Create</a>
                        </div>
                        <!-- /.card-header -->
                        <div style="overflow-x:hidden" class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap" style=" width:100%;">
                                <thead>
                                    <tr>

                                        <th>Slides side</th>
                                        <th>Image</th>
                                        <th>Restaurant Name</th>
                                        <th>Saw</th>
                                        <th>Description</th>
                                        
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var slides in Model)
                                    {
                                        <tr class="w-25">
                                            <td>
                                                <p>
                                                    @count
                                                </p>
                                                
                                            </td>
                                            <td>
                                                
                                                @if (slides.Image.Contains(".mp4"))
                                                {
                                                    <video src="~/photos/Our-chef-photo/@slides.Image" width="300px"></video>
                                                }
                                                else
                                                {
                                            <img src="~/photos/Our-chef-photo/@slides.Image" style="width:300px" />
                                                }

                                            </td>
                                            <td>
                                                <p>
                                                    @slides.RestaurantName
                                                </p>
                                                
                                            </td>
                                            <td>
                                                @slides.Saw
                                            </td>
                                            <td>
                                                <p style="border:2px solid red; width:402px; word-break:break-all; white-space:normal;">
                                                    @slides.Description
                                                </p> 
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@slides.Id" class="btn btn-primary">
                                                    <i class="fas fa-wrench"></i>
                                                </a>
                                                @if (count > 1)
                                                {

                                                    <a asp-action="Delete" asp-route-id="@slides.Id" class="btn btn-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                    </a>

                                                }

                                            </td>
                                        </tr>
                                        count++;
                                    }


                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</section>

