@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        
                        <div class="col-12 my-3">
                            <a asp-action="Create" class="btn btn-success">Create</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        
                                        <th>How To Reach side</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contact in Model)
                                    {
                                        <tr class="w-25">
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                <p style=" width:402px; word-break:break-all; white-space:normal;">
                                                    @contact.HowToReach
                                                </p>
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@contact.Id" class="btn btn-primary">
                                                    <i class="fas fa-wrench"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger">
                                                    <i class="far fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        count++;
                                    }


                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</section>

