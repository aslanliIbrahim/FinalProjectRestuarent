@model IEnumerable<About>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        
                        <div class="col-12 my-3">
                            <a asp-action="Create" class="btn btn-success">Create</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0 ">
                            <table class="table table-hover text-nowrap col-md-1">
                                <thead>
                                    <tr>

                                        <th>Slides side</th>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>GourMet</th>
                                        <th>Clean Tastes</th>
                                        <th>Modern Environment</th>
                                        <th>Change or Delete</th>


                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var st in Model)
                                    {
                                        <tr class="w-25">
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                <img src="~/photos/about-photo/@st.Image" style="width:300px;"  />
                                            </td>
                                            <td>
                                                <p>
                                                    @st.Title
                                                </p>
                                            </td>
                                            <td>
                                                <p>
                                                    @st.Description
                                                </p>
                                               
                                            </td>
                                            <td>
                                                <p>
                                                    @st.GourMet
                                                </p>
                                               
                                            </td>
                                            <td>
                                                <p>
                                                    @st.CleanTastes
                                                </p>
                                                
                                            </td>
                                            <td>
                                                <p>
                                                    @st.ModernEnvironment
                                                </p>
                                               
                                            </td>

                                            <td>
                                                <p>
                                                    @st.AboutFood
                                                </p>
                                                
                                            </td>

                                            <td>
                                                <a asp-action="Update" asp-route-id="@st.Id" class="btn btn-primary">
                                                    <i class="fas fa-wrench"></i>
                                                </a>
                                                @if (count > 1)
                                                {

                                                    <a asp-action="Delete" asp-route-id="@st.Id" class="btn btn-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                    </a>

                                                }

                                            </td>
                                        </tr>
                                        count++;
                                    }


                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</section>



