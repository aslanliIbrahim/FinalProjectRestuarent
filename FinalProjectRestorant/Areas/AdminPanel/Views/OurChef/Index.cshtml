@model IEnumerable<OurChef>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        
                        <div class="col-12 my-3">
                            <a asp-action="Create" class="btn btn-success">Create</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>

                                        <th>Slides side</th>
                                        <th>Image</th>
                                        <th>Restaurant Name</th>
                                        <th>Saw</th>
                                        <th>Description</th>
                                        <th>SocialMedia</th>
                                        <th>SocialMedia</th>
                                        <th>SocialMedia</th>
                                        <th>SocialMedia</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var chef in Model)
                                     {
                                        <tr class="w-25">
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                <img src="~/photos/Our-chef-photo/@chef.Image" style="width:200px; height:200px;"/>
                                            </td>
                                            <td>
                                                @chef.Name
                                            </td>
                                            <td>
                                                @chef.Position
                                            </td>
                                            <td>
                                                @chef.Face
                                            </td>
                                            <td>
                                                @chef.Insta
                                            </td>
                                            <td>
                                                @chef.Twit
                                            </td>
                                            <td>
                                                @chef.AboutChef
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@chef.Id" class="btn btn-primary">
                                                    <i class="fas fa-wrench"></i>
                                                </a>
                                                

                                                    <a asp-action="Delete" asp-route-id="@chef.Id" class="btn btn-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                    </a>

                                                

                                            </td>
                                        </tr>
                                        count++;
                                     }


                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</section>

