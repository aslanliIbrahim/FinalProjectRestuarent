@model IEnumerable<AdminOrder>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        
                                        <th>Count</th>
                                        <th>Image</th>
                                        <th>Price</th>
                                        <th>Food Name</th>

                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var st in Model)
                                    {
                                        <tr class="w-25">
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                <img src="~/photos/Menu-photo/@st.Image" width="300px" />
                                            </td>
                                            <td>
                                                @st.Price
                                            </td>

                                            <td>
                                                @st.NameOfFood
                                            </td>

                                            
                                        </tr>
                                        count++;
                                    }


                                </tbody>
                            </table>
                            
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</section>


