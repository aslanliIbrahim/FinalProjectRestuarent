@model IEnumerable<AboutChefHome>
@{
   ViewData["Title"] = "Index";
   int count = 1;
}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
 
                            <div class="col-12 my-3">
                                <a asp-action="Create" class="btn btn-success">Create</a>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0 ">
                                
                                    <table class="table table-hover text-nowrap">
                                        <thead>
                                            <tr>

                                                <th>Slides side</th>
                                                <th>Image</th>
                                                <th>AboutChef</th>
                                                <th>Update</th>
                                            </tr>

                                        </thead>

                                        <tbody>
                                            @foreach (var ch in Model)
                                            {
                                                <tr class="w-25">
                                                    <td>
                                                        @count
                                                    </td>
                                                    <td>
                                                        <img src="~/photos/Home-photo/@ch.Image" width="300px" />
                                                    </td>
                                                    <td>
                                                        <p style=" width:402px; word-break:break-all; white-space:normal;">
                                                            @ch.ChefAbout
                                                        </p>
                                                    </td>

                                                    <td>
                                                        <a asp-action="Update" asp-route-id="@ch.Id" class="btn btn-primary">
                                                            <i class="fas fa-wrench"></i>
                                                        </a>
                                                        @if (count > 1)
                                                        {

                                                            <a asp-action="Delete" asp-route-id="@ch.Id" class="btn btn-danger">
                                                                <i class="far fa-trash-alt"></i>
                                                            </a>

                                                        }

                                                    </td>
                                                </tr>
                                                count++;
                                            }


                                        </tbody>
                                    </table>
                                
                                
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </div>
    </section>



