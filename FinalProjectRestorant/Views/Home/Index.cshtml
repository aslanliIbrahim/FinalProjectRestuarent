@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<section class="showcase">
    <div class="video-container">
        <div class="video">
            <video autoplay loop muted src="../photos/Our-chef-photo/@Model.Slides.ElementAt(5).Image"></video>
        </div>
    </div>
</section>


<div class="container ">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 text-center">
            <div>
                <section class="slider-text-area">
                    <div class="slider-text">
                        <h5 data-aos="fade-down">@Model.Slides.ElementAt(5).Saw</h5>
                        <h2 data-aos="fade-down">@Model.Slides.ElementAt(5).RestaurantName</h2>
                        <div class="text-area col-sm-12" data-aos="fade-down">
                            <p>
                                @Model.Slides.ElementAt(5).Description
                            </p>
                        </div>
                        <a asp-action="Index" asp-controller="Menu" class="btn button" data-aos="fade-down">View menu</a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>


<!--about in home start-->
<section class="our-story">
    <div class="container content">
        <div class="row">
            <div class="col-lg-6 col-sm-12 text-left">
                <div class="text-left-up-side">
                    <p>
                        Sweet and tiny like a chocolate
                    </p>
                    <h2>
                        OUR STORY
                    </h2>
                </div>
                <div class="text-left-story">
                    <p>
                        @Model.Abouts.ElementAt(0).Description
                    </p>
                </div>
                <div class="text-left-img">
                    <img src="../photos/Home-photo/image-1.png" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-sm-12 text-img">
                <a href="../photos/Home-photo/large-1.jpg" data-aos="fade-left" data-lightbox-anima="fade-in"
                   class="btn btn-sm lightbox" data-options="mainClass:inner" title="Lorem ipsum">
                    <img src="../photos/Home-photo/large-1.jpg" alt="">
                </a>
            </div>
            <hr>
        </div>
    </div>
</section>

<!--menu side start-->
<section class="menu-card">
    <div class="container content">
        <div class="row">
            @foreach (var hm in Model.HomeCards.Take(4))
            {
               
                    <div class="col-md-3 card-of-menu">
                        <div class="general-card">
                            <div class="menu-img">
                                <img src="../photos/Home-photo/@hm.Image" alt="">
                            </div>
                            <a asp-action="Index" asp-controller="@hm.AspController" class="menu-text">
                                <h2 class="visible">@hm.Title</h2>
                                <hr class="line">
                                <p class="on-visible-hover">
                                    @hm.Description
                                </p>
                            </a>
                        </div>
                    </div>

            }

        </div>
    </div>
</section>



<section class="fast-menu">
    <div class="container content">
        <div class="name-of-menu">
            <div class="menu-up">
                <p>
                    Genuine and delicious
                </p>

                <h2>
                    OUR MENU
                </h2>
            </div>

        </div>
        <div class="row">
            <div class="col-md-5 menu-left">
                <div class="list-items">
                    <div class="list-item">
                        @foreach (var st in Model.SteakBigMenus.Take(3))
                        {
                            <div class="row">
                                <a asp-action="Index" asp-controller="SteakBigMenu" style="text-decoration:none; display:flex;">
                                    <div class="col-md-9 for-hover">
                                        <h3>@st.BigMenuFoodName</h3>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                                    </div>
                                    <div class="col-md-3 price">
                                        <span>@st.Price$</span>
                                    </div>
                                </a>
                                <hr>
                            </div>
                        }
                    </div>
                    @foreach (var br in Model.BreakFasts.Take(2))
	                 {
                        <div class="list-item">
                             <div class="row ">
                                 <a asp-action="Index" asp-controller="BreakFast" style="text-decoration:none; display:flex;">
                                     <div class="col-md-9 for-hover">
                                         <h3>@br.BigMenuFoodName</h3>
                                         <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                                     </div>
                                     <div class="col-md-3 price">
                                         <span>@br.Price$</span>
                                     </div>
                                 </a>
                                <hr>
                            </div>
                        </div>
	                 }
                </div>
            </div>

            <div class="col-md-5 menu-left">

                <div class="list-items">
                    @foreach (var pz in Model.Pizzas.Take(2))
                    {
                        <div class="list-item">
                            <div class="row ">
                                <a asp-action="Index" asp-controller="Pizza" style="text-decoration:none; display:flex;">
                                    <div class="col-md-9 for-hover">
                                        <h3>@pz.BigMenuFoodName</h3>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                                    </div>
                                    <div class="col-md-3 price">
                                        <span>@pz.Price$</span>
                                    </div>

                                </a>
                                <hr>
                            </div>
                        </div>
                    }
                    @foreach (var st in Model.Starters.Take(3))
                    {
                        <div class="list-item">
                            <div class="row ">
                                <a asp-action="Index" asp-controller="Starters" style="text-decoration:none; display:flex;">
                                    <div class="col-md-9 for-hover">
                                        <h3>@st.BigMenuFoodName</h3>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                                    </div>
                                    <div class="col-md-3 price">
                                        <span>@st.Price$</span>
                                    </div>
                                </a>
                                <hr>
                            </div>
                        </div>
                    }

                   
                </div>
            </div>
        </div>
        <div class="button-menu">
            <a asp-action="Index" asp-controller="Menu" class="fast-menu-button">Full Menu</a>
        </div>
    </div>
</section>

<section class="offer">
    <div class="container content">
        <div class="row">
            @foreach (var hm in Model.HomeCards.Skip(4).Take(6))
            {


                <div class="col-md-4" style="margin-bottom:30px;">
                    <div class="icon-img">
                        <a asp-action="Index" asp-controller="@hm.AspController" class="img-offer">
                            <img src="../photos/Home-photo/@hm.Image" alt="">
                        </a>
                        <div class="card-about">
                            <div class="type-of-food">
                                <p>@hm.TypeOfFood</p>
                            </div>
                            <div class="food-about-up">
                                <h3>
                                    <a href="">
                                        @hm.Description
                                    </a>
                                </h3>
                            </div>
                            <div class="food-about-down">
                                <p>
                                    @hm.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div>
</section>

<section class="our-chef">
    <div class="container content">
        <div class="row" style="margin-right: 30px; margin-left: 30px;">
            <div class="col-md-6 chef-photo">
                <img src="~/../photos/Home-photo/@Model.AboutChefHome.Image" alt="chefs">
            </div>
            <div class="col-md-6">
                <div class="chefs-about">
                    <div class="chef-up">
                        <p>Starred Michelin chiefs</p>
                        <h2>OUR CHEFS</h2>
                    </div>
                    <div class="chef-down">
                        <p>
                            @Model.AboutChefHome.ChefAbout
                        </p>
                    </div>
                    <div class="chef-button">
                        <a asp-action="Index" asp-controller="OurChef" >Our Story</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="open-times">
    <div class="container content">
        <div class="row">
            <div class="col-md-1 clock">
                <img src="../photos/Home-photo/clock-gif.gif" alt="">
            </div>
            <div class="col-md-2 time-text">
                <p>Our open schedules</p>
                <h2>HOURS</h2>
            </div>
            <div class="col-lg-9 col-md-6 col-sm-12 text-center open-times-table">
                <table class="table table-hover">
                    <thead>
                        <tr class="col-md-12">
                            <th>Day</th>
                            @foreach (var hm in Model.OpenTimes)
                            {
                                <th>
                                    @hm.Day
                                </th>

                            }
                        </tr>
                    </thead>
                    <tbody class="col-md-12">
                        <tr>
                            <th>
                                Launch
                            </th>
                            @foreach (var hm in Model.OpenTimes)
                            {

                                <td>
                                    @hm.Hours
                                </td>

                            }

                        </tr>
                        <tr>
                            <th>Dinner</th>
                            @foreach (var hm in Model.OpenTimes)
                            {
                                <td>
                                    @hm.DinnerHours
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

